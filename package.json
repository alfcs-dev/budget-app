{
  "name": "budget-manager-monorepo",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend", 
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:backend": "turbo dev --filter=@budget-manager/backend",
    "dev:frontend": "turbo dev --filter=@budget-manager/frontend",
    "start:backend": "turbo start --filter=@budget-manager/backend",
    "build:backend": "turbo build --filter=@budget-manager/backend",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "turbo run db:generate --filter=@budget-manager/database",
    "db:migrate": "turbo run db:migrate --filter=@budget-manager/database",
    "db:seed": "turbo run db:seed --filter=@budget-manager/database",
    "db:studio": "cd packages/database && npx prisma studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@budget-manager/eslint-config": "*",
    "@turbo/gen": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.0.0"
}